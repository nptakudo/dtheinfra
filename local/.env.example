# Data Platform Local Development Environment Variables
# Copy this file to .env and adjust values as needed

# Platform Configuration
DP_ENVIRONMENT=local
DP_DEBUG=true
DP_LOG_LEVEL=DEBUG

# Kafka Configuration
DP_KAFKA_BOOTSTRAP_SERVERS=localhost:29092
DP_KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# S3/MinIO Configuration
DP_S3_ENDPOINT_URL=http://localhost:9000
DP_S3_ACCESS_KEY_ID=minioadmin
DP_S3_SECRET_ACCESS_KEY=minioadmin
DP_S3_BUCKET_BRONZE=bronze
DP_S3_BUCKET_SILVER=silver
DP_S3_BUCKET_GOLD=gold

# Iceberg Configuration
DP_ICEBERG_CATALOG_TYPE=rest
DP_ICEBERG_CATALOG_URI=http://localhost:8181
DP_ICEBERG_WAREHOUSE=s3://warehouse/

# Database Configuration
DP_DB_HOST=localhost
DP_DB_PORT=5432
DP_DB_DATABASE=dataplatform
DP_DB_USERNAME=dataplatform
DP_DB_PASSWORD=dataplatform

# AWS Configuration (for local development with MinIO)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
